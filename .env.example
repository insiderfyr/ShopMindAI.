# ShopMindAI Backend Environment Variables

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=shopmindai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=shopmindai-backend
KAFKA_AUTO_OFFSET_RESET=latest

# Service Ports
USER_SERVICE_PORT=8081
USER_SERVICE_GRPC_PORT=50051
CHAT_SERVICE_PORT=8082
CHAT_SERVICE_GRPC_PORT=50052
AUTH_SERVICE_PORT=8083

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080/auth
KEYCLOAK_REALM=shopmindai
KEYCLOAK_CLIENT_ID=backend-services
KEYCLOAK_CLIENT_SECRET=your-secret-here
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_DATACENTER=dc1

# API Gateway (Traefik)
TRAEFIK_HOST=localhost
TRAEFIK_PORT=8080
TRAEFIK_DASHBOARD_PORT=8090

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BURST=20

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
DEBUG=true

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@shopmindai.com

# External APIs (for price tracking)
AMAZON_API_KEY=your-amazon-api-key
EBAY_API_KEY=your-ebay-api-key
WALMART_API_KEY=your-walmart-api-key

# Storage (for product images)
S3_BUCKET=shopmindai-products
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_PRICE_TRACKING=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
